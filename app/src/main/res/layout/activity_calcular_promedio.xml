<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcularPromedio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCalcularPromedio"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:text="@string/mostrar_notas_faltantes" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCalcularPromedio"
            android:layout_width="match_parent"
            android:layout_height="397dp" />

        <TextView
            android:id="@+id/textViewResCalcularPromedio"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewCalcularPromedioProm"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center" />

        <Button
            android:id="@+id/buttonCalcularPromedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recalcular" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>