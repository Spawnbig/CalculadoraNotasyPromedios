<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="184dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombreNota"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:text="TextView"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarNota"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="60"
                android:progress="1" />

            <TextView
                android:id="@+id/textViewValorNota"
                android:layout_width="43dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/checkBoxSaberNota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="99" />

            <TextView
                android:id="@+id/textViewPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/porcentaje"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>